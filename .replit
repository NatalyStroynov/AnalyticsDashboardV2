modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular CLI Server"

[[workflows.workflow]]
name = "Angular Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Angular CLI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "node server.js"]

[[ports]]
localPort = 5000
externalPort = 80
